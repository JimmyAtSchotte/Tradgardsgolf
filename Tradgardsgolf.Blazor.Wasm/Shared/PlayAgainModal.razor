<p>Vill ni spela igen?</p>

<Container>
    <Row>
        <Column ColumnSize="ColumnSize.Is3">
            <Button Color="Color.Danger" Clicked="No">Nej <Icon Name="Blazorise.Icons.Material.MaterialIcons.Cancel" /></Button>
        </Column>
        <Column ColumnSize="ColumnSize.Is6">
            <Button Color="Color.Warning" Clicked="ChangePlayers">Byt spelare <Icon Name="Blazorise.Icons.Material.MaterialIcons.Sync" /></Button>
        </Column>
        <Column ColumnSize="ColumnSize.Is3">
            <Button Color="Color.Primary" Clicked="Yes">Ja <Icon Name="Blazorise.Icons.Material.MaterialIcons.PlayArrow" /></Button>
        </Column>
    </Row>
</Container>

@code {
    [CascadingParameter] 
    BlazoredModalInstance ModalInstance { get; set; }

    public enum Results
    {
        No,
        ChangePlayers,
        Yes
    }
    
    private void No()
    {
        ModalInstance.Close(ModalResult.Ok(Results.No));
    }

    private void ChangePlayers()
    {
        ModalInstance.Close(ModalResult.Ok(Results.ChangePlayers));
    }

    private void Yes()
    {
        ModalInstance.Close(ModalResult.Ok(Results.Yes));
    }

}