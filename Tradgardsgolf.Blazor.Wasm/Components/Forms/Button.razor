<button class="waves-effect waves-light btn"
        @onclick="InvokeOnClick"
        disabled="@Disabled"
        value="@Value">
    @Text
</button>

@code {
    [Parameter]
    public Action OnClick { get; set; }

    [Parameter]
    public string Text { get; set; }

    [Parameter]
    public string Value { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    private void InvokeOnClick()
    {
        OnClick?.Invoke();
    }

}